{% extends 'base.html.twig' %}

{% block body %}
    
    <p class="mb-8 text-gray-600 dark:text-gray-500">The main area of ​​my expertise is back-end development.</p>

    <div class="grid grid-cols-2 md:grid-cols-4 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-4 gap-8">

    {% for skill in skills | sort((a,b) => a.name <=> b.name) %}
        
        <img width="w-full" src="{{ skill.logo }}" alt="{{ skill.name }}" title="{{ skill.name }}"/>

    {% endfor %}

    </div>

{% endblock %}