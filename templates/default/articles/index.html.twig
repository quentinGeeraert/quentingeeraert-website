{% extends 'base.html.twig' %}

{% block body %}
    
    <div class="grid md:grid-cols-1 sm:grid-cols-1 lg:grid-cols-2 xl:grid-cols-1 gap-4">

		{% for article in articles %}

		<div class="sm:flex bg-white dark:bg-gray-800 overflow-hidden dark:hover:bg-gray-700 hover:bg-gray-100 border border-gray-200 dark:border-gray-800 rounded-lg">
			<div class="h-48 md:h-auto sm:h-auto xml:h-auto md:w-1/3 sm:w-1/3 xl:w-1/3 bg-cover bg-center" style="background-image: url({{ article.pictures | first }})"></div>
			<div class="md:w-2/3 sm:w-2/3 xl:w-2/3 p-3">
				<div class="m-2 text-justify text-sm dark:text-white">
					<p class="text-right mb-2 text-xs">{{ article.getUpdatedAt() | format_datetime('full', 'none', locale='en') }}</p>
					<h2 class="font-bold text-lg mb-2">{{ article.title }}</h2>
					<p class="text-xs">
						{{ article.description | raw }}
					</p>
				</div>
				<div class="w-full text-right mt-4">
					<a class="text-green-400 uppercase font-bold text-sm" href="{{ path('app_articles', {'slug': article.slug}) }}">Read More</a>
				</div>
			</div>
		</div>

		{% endfor %}

	</div>

{% endblock %}