{% extends 'base.html.twig' %}

{% block body %}

    <div class="grid md:grid-cols-2 sm:grid-cols-1 lg:grid-cols-2 xl:grid-cols-2 gap-4">

    {% for project in projects %}

        <a href="{{ path('app_portfolio', {'slug': project.slug}) }}" class="rounded bg-gray-100 hover:opacity-75 transition duration-300 ease-in-out overflow-hidden shadow-lg">
            <img class="object-cover w-full h-64" src="{{ (project.pictures | first) }}" />
            <div class="px-6 py-4">
                <div class="font-bold text-xl mb-2">{{ project.name }}</div>
                <p class="text-gray-700 text-base">
                    {{ project.description | raw }}
                </p>
            </div>
            <div class="px-6 pt-4 pb-2">
                {% for category in project.categories %}
                    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#{{ category }}</span>
                {% endfor %}
            </div>
        </a>

    {% endfor %}

    </div>

{% endblock %}