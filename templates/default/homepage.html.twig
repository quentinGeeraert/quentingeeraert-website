{% block body %}

	<div class="grid md:grid-cols-1 sm:grid-cols-1 lg:grid-cols-2 xl:grid-cols-1 gap-4">

		{% for article in articles %}

		<div class="sm:flex bg-white dark:bg-gray-800 overflow-hidden dark:hover:bg-gray-700 hover:bg-gray-100 border border-gray-200 dark:border-gray-800 rounded-lg reveal transition duration-1000">
			<div 
				class="h-48 md:h-auto sm:h-auto xml:h-auto md:w-1/3 sm:w-1/3 xl:w-1/3 bg-cover bg-center" 
				style="background-image: url({{ (article.pictures | length > 0) ? (article.pictures | first) : asset('build/images/no-image-icon.png') }})"
			></div>
			<div class="md:w-2/3 sm:w-2/3 xl:w-2/3 p-3">
				<div class="m-2 text-justify text-sm dark:text-white">
					<p class="text-right mb-2 text-xs">{{ article.getUpdatedAt() | format_datetime('full', 'none', locale='en') }}</p>
					<h2 class="font-bold text-lg mb-2">{{ article.title }}</h2>
					<p class="text-xs">
						{{ article.description | raw }}
					</p>
				</div>
				<div class="w-full text-right mt-4">
					<a class="dark:text-green-400 uppercase font-bold text-sm" href="{{ path('app_articles', {'slug': article.slug}) }}">Read The Article</a>
				</div>
			</div>
		</div>

		{% endfor %}

		{% if buttonShowMoreArticles %}

		<div class="reveal transition duration-1000 rounded-t-xl overflow-hidden p-5">
  			<div class="flex justify-around">
				<a href="{{ path('app_articles') }}" class="rounded-lg px-4 md:px-5 xl:px-4 py-3 md:py-4 xl:py-3 bg-blue-500 hover:bg-blue-600 md:text-lg xl:text-base text-white font-semibold leading-tight shadow-md">
					Show more articles âžœ
				</a>
			</div>
		</div>

		{% endif %}

	</div>

{% endblock %}

{% block footer %}{% endblock %}